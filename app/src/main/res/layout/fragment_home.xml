<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_Perfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/roundedImageViewRounded"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/ic_launcher2_background"
        tools:src="@drawable/ic_launcher2_background" />

    <TextView
        android:id="@+id/txt_hola"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="116dp"
        android:text="@string/hola"
        app:layout_constraintBottom_toBottomOf="@+id/img_Perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_Perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.546" />

    <TextView
        android:id="@+id/txt_User"
        android:layout_width="208dp"
        android:layout_height="29dp"
        android:text="@string/usuario"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="@+id/txt_hola"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toEndOf="@+id/img_Perfil"
        app:layout_constraintTop_toBottomOf="@+id/txt_hola"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgb_CochesSegundaMano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/BotonesHomeFragment"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="110dp" />

    <TextView
        android:id="@+id/txt_coches_segundamano"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/coches_segunda_mano"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imgb_CochesSegundaMano"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/imgb_CochesSegundaMano"
        app:layout_constraintTop_toBottomOf="@+id/imgb_CochesSegundaMano" />

    <ImageButton
        android:id="@+id/imgb_CochesNuevos"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/gcm_defaultSenderId"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/imgb_CochesSegundaMano"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <TextView
        android:id="@+id/txt_coches_nuevos"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/cohes_nuevos"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imgb_CochesNuevos"
        app:layout_constraintStart_toStartOf="@+id/imgb_CochesNuevos"
        app:layout_constraintTop_toBottomOf="@+id/imgb_CochesNuevos" />

</androidx.constraintlayout.widget.ConstraintLayout>